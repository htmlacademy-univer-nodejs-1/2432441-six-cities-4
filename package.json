{
  "name": "six-cities",
  "version": "5.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "start:dev": "npm run start | pino-pretty",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts --ignore-pattern src/schema/schema.d.ts",
    "format": "prettier -w src/",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "server": "json-server mocks/mock-server-data.json",
    "schema": "npx openapi-typescript ./specification/specification.yaml -o ./src/schema/schema.d.ts --root-types --root-types-no-schema-prefix"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/convict": "^6.1.6",
    "@types/convict-format-with-validator": "^6.0.5",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/hapi__joi": "^17.1.15",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mime-types": "^3.0.1",
    "@types/multer": "^1.4.13",
    "@types/node": "18.17.17",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "eslint-config-prettier": "^10.0.1",
    "json-server": "^1.0.0-beta.3",
    "openapi-typescript": "^7.7.1",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.1",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "tslib": "^2.8.1",
    "typescript": "5.2.2"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "@typegoose/typegoose": "^12.15.0",
    "bcrypt": "^5.1.1",
    "chalk": "^5.4.1",
    "class-transformer": "^0.5.1",
    "commander": "^13.1.0",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "got": "^14.4.6",
    "http-status-codes": "^2.3.0",
    "inversify": "^7.5.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^3.0.1",
    "mongoose": "^8.14.1",
    "multer": "^2.0.1",
    "nanoid": "^5.1.5",
    "pino": "^9.6.0",
    "random": "^5.3.0",
    "uuid": "^11.1.0"
  }
}
